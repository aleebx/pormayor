{% extends "layout/intranet/template_adm.twig" %}
{% block head %}

{% endblock %}
{% block content %}
  <main class="container">
    <div class="card">
      <div class="card-content sinPadding">
        <h4 class="card-title center-align pormayor pormayorAccent-text" style="padding:15px">Tienda {{tienda.Tie_Nombre}}</h4>
          <div class="row">
            <div class="col s12">
              <ul class="tabs">
                {% include 'layout/intranet/tabs_tienda_adm.twig' %}
              </ul>
            </div>
            <div id="test3" class="col s12 m12 l12">
              <h5 class="center show-on-small hide-on-med-and-up">Locales</h5>
              <table class="bordered">
                <thead class="hide-on-small-only">
                  <th>NÂ°</th>
                  <th class="center">Local</th>
                </thead>
                <tbody>
                  {% set nro = 1 %}
                  {% for loc in locales %}
                    <tr>
                      <td>{{nro}}</td>
                      <td>
                        <p>{{loc.Loc_Nombre}}</p>
                        <span class="enfasisB">{{loc.Loc_Direccion}}</span><br>
                        <small class="nroTelf">{{loc.Loc_Numero}}</small>
                      </td>
                    </tr>
                    {% set nro = nro + 1 %}
                  {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
  </main>   

{% endblock %}
{% block script %}
  <script type="text/javascript">
    $(document).ready(function(){
      $('.tabs').tabs();
    });
    $(".nroTelf").text(function(i, v)
    {
        var v = v.replace(/[^\d]/g, '').match(/.{1,3}/g);
        return v ? v.join(' - ') : '';
    });
  </script>  
{% endblock %}
