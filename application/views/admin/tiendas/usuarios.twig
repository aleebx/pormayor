{% extends "layout/intranet/template_adm.twig" %}
{% block head %}
{% endblock %}
{% block content %}
  <main class="container">
    <div class="card">
      <div class="card-content sinPadding">
        <h4 class="card-title center-align pormayor pormayorAccent-text" style="padding:15px">Tienda {{tienda.Tie_Nombre}}</h4>
          <div class="row">
            <div class="col s12">
              <ul class="tabs">
                {% include 'layout/intranet/tabs_tienda_adm.twig' %}
              </ul>
            </div>
            <div id="test3" class="col s12 m12 l12">
              <h5 class="center show-on-small hide-on-med-and-up">Usuarios</h5>
                <table class="striped">
                  <thead class="hide-on-small-only">
                    <th>N°</th>
                    <th class="center">Datos</th>
                    <th class="center">Rol</th>
                  </thead>
                  <tbody>
                    {% set nro = 1 %}
                    {% for usu in usuarios %}
                      <tr>
                        <td>{{nro}}</td>
                        <td>
                          <p>{{usu.Per_Nombre}}</p>
                          <small class="enfasisB">{{usu.Usu_Correo}}</small>
                        </td>
                        <td class="center">
                          {% if usu.Rol_IdRol == 2 %}
                            Dueño
                          {% elseif usu.Rol_IdRol == 3 %}
                            Vendedor
                          {% endif %}
                        </td>
                      </tr>
                      {% set nro = nro + 1 %}
                    {% endfor %}
                  </tbody>
                </table>
            </div>
          </div>   
        </div>
    </div>
  </main>   

{% endblock %}
{% block script %}
  <script type="text/javascript">
    $(document).ready(function(){
      $('.tabs').tabs();
    });
  </script>  
{% endblock %}
