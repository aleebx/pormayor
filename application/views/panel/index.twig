  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Dashboard</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item active">Dashboard</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
      <div class="row">

        <!-- Left side columns -->
        <div class="col-lg-8">
          <div class="row">

            <!-- Sales Card -->
            <div class="col-xxl-4 col-md-6">
              <div class="card info-card sales-card">

                <div class="filter">
                  <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                  <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                    <li class="dropdown-header text-start">
                      <h6>Filter</h6>
                    </li>

                    <li><a class="dropdown-item" href="#">Hoy</a></li>
                    <li><a class="dropdown-item" href="#">Semana</a></li>
                    <li><a class="dropdown-item" href="#">Mes</a></li>
                    <li><a class="dropdown-item" href="#">Año</a></li>
                  </ul>
                </div>

                <div class="card-body">
                  <h5 class="card-title">Ventas <span>| Hoy</span></h5>

                  <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                      <i class="bi bi-cart"></i>
                    </div>
                    <div class="ps-3">
                      <h6>{{ventashoy}} <span style="font-size: 12px;color: grey;">| {{ventasayer}}</span></h6>
                      {% if ventasayer %}
                      {% set difVenta = (( ventashoy * 100 ) / ventasayer) - 100 %}
                      {% else %}
                      {% set difVenta = 0 %}
                      {% endif %}
                        {% if difVenta > 0 %}
                      <span class="text-success small pt-1 fw-bold">{{difVenta|round}}%</span> <span class="text-muted small pt-2 ps-1">incremento</span>
                        {% else %}
                          {% set difVentaPo = difVenta * -1 %}
                      <span class="text-danger small pt-1 fw-bold">{{difVentaPo|round}}%</span> <span class="text-muted small pt-2 ps-1">disminuyo</span>
                        {% endif %}

                    </div>
                  </div>
                </div>

              </div>
            </div><!-- End Sales Card -->

            <!-- Revenue Card -->
            <div class="col-xxl-4 col-md-6">
              <div class="card info-card revenue-card">

                <div class="filter">
                  <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                  <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                    <li class="dropdown-header text-start">
                      <h6>Filter</h6>
                    </li>

                    <li><a class="dropdown-item" href="#">Hoy</a></li>
                    <li><a class="dropdown-item" href="#">Semana</a></li>
                    <li><a class="dropdown-item" href="#">Mes</a></li>
                    <li><a class="dropdown-item" href="#">Año</a></li>
                  </ul>
                </div>

                <div class="card-body">
                  <h5 class="card-title">Monto <span>| Hoy</span></h5>

                  <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                      <i class="bi bi-currency-dollar"></i>
                    </div>
                    <div class="ps-3">
                      <h6>S/ {{montoHoy.montoT}} <span style="font-size: 12px;color: grey;">| {{montoAyer.montoT}}</span></h6>
                      {% if montoAyer.montoT %}
                      {% set difMonto = (( montoHoy.montoT * 100 ) / montoAyer.montoT) - 100 %}
                      {% else %}
                      {% set difMonto = 0 %}
                      {% endif %}
                        {% if difMonto > 0 %}
                      <span class="text-success small pt-1 fw-bold">{{difMonto|round}}%</span> <span class="text-muted small pt-2 ps-1">incremento</span>
                        {% else %}
                          {% set difMontoPo = difMonto * -1 %}
                      <span class="text-danger small pt-1 fw-bold">{{difMontoPo|round}}%</span> <span class="text-muted small pt-2 ps-1">disminuyo</span>
                        {% endif %}
                    </div>
                  </div>
                </div>

              </div>
            </div><!-- End Revenue Card -->

            <!-- Customers Card -->
            <div class="col-xxl-4 col-xl-12">

              <div class="card info-card customers-card">

                <div class="filter">
                  <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                  <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                    <li class="dropdown-header text-start">
                      <h6>Filter</h6>
                    </li>

                    <li><a class="dropdown-item" href="#">Hoy</a></li>
                    <li><a class="dropdown-item" href="#">Semana</a></li>
                    <li><a class="dropdown-item" href="#">Mes</a></li>
                    <li><a class="dropdown-item" href="#">Año</a></li>
                  </ul>
                </div>

                <div class="card-body">
                  <h5 class="card-title">Clientes registrado <span>| Hoy</span></h5>

                  <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                      <i class="bi bi-people"></i>
                    </div>
                    <div class="ps-3">
                      <h6>{{registroHoy}} <span style="font-size: 12px;color: grey;">| {{registroAyer}}</span></h6>
                      {% if registroAyer %}
                      {% set difReg = (( registroHoy * 100 ) / registroAyer) - 100 %}
                      {% else %}
                      {% set difReg = 0 %}
                      {% endif %}
                        {% if difReg > 0 %}
                      <span class="text-success small pt-1 fw-bold">{{difReg|round}}%</span> <span class="text-muted small pt-2 ps-1">incremento</span>
                        {% else %}
                          {% set difRegPo = difReg * -1 %}
                      <span class="text-danger small pt-1 fw-bold">{{difRegPo|round}}%</span> <span class="text-muted small pt-2 ps-1">disminuyo</span>
                        {% endif %}

                    </div>
                  </div>

                </div>
              </div>

            </div><!-- End Customers Card -->

            <!-- Top Selling -->
            <div class="col-12">
              <div class="card top-selling overflow-auto">

                <div class="card-body pb-0">
                  <h5 class="card-title">Top Productos <span>| 7 días</span></h5>

                  <table class="table table-borderless">
                    <thead>
                      <tr>
                        <th scope="col">Preview</th>
                        <th scope="col">Producto</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Cantidad</th>
                        <th scope="col">Monto</th>
                      </tr>
                    </thead>
                    <tbody>
                      {% for t in top %}
                      <tr>
                        <th scope="row"><a href="#"><img src="{{ruta_img}}{{ t.img_producto }}" alt=""></a></th>
                        <td><a href="#" class="text-primary fw-bold">{{ t.Pro_Nombre }}</a></td>
                        <td>S/ {{t.Pro_PrecioMinimo}}</td>
                        <td class="fw-bold">{{ t.total }}</td> {% set totalMtop = t.Pro_PrecioMinimo * t.total %}
                        <td>S/ {{totalMtop}}</td>
                      </tr>
                      {% endfor %}
                    </tbody>
                  </table>

                </div>

              </div>
            </div><!-- End Top Selling -->

            <div class="col-12">
              <div class="card top-selling overflow-auto">

                <div class="card-body pb-0">
                  <h5 class="card-title">Productos Fail <span>| 4 semanas</span></h5>

                  <table class="table table-borderless">
                    <thead>
                      <tr>
                        <th scope="col">Preview</th>
                        <th scope="col">Producto</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Cantidad</th>
                        <th scope="col">Monto</th>
                      </tr>
                    </thead>
                    <tbody>
                      {% for t in fail %}
                      <tr>
                        <th scope="row"><a href="#"><img src="{{ruta_img}}{{ t.img_producto }}" alt=""></a></th>
                        <td><a href="#" class="text-primary fw-bold">{{ t.Pro_Nombre }}</a></td>
                        <td>S/ {{t.Pro_PrecioMinimo}}</td>
                        <td class="fw-bold">{{ t.total }}</td> {% set totalMfail = t.Pro_PrecioMinimo * t.total %}
                        <td>S/ {{totalMfail}}</td>
                      </tr>
                      {% endfor %}
                    </tbody>
                  </table>

                </div>

              </div>
            </div><!-- End Top Selling -->

          </div>
        </div><!-- End Left side columns -->

        <!-- Right side columns -->
        <div class="col-lg-4">

          <div class="col-12">
              <div class="card top-selling overflow-auto">

                <div class="card-body pb-0">
                  <h5 class="card-title">Región - Ventas</h5>

                  <table class="table table-borderless">
                    <thead>
                      <tr>
                        <th scope="col">Región</th>
                        {# <th scope="col">Clientes</th> #}
                        <th scope="col">Ventas</th>
                        {# <th scope="col">Monto</th> #}
                      </tr>
                    </thead>
                    <tbody>
                      {% set totalCr = 0 %}
                      {% set totalVr = 0 %}
                      {% for vr in ventasRegion %}
                      <tr>
                        <td>{{vr.name}}</td>
                        {# <td>64</td> #}
                        <td class="fw-bold">{{vr.cantidadV}}</td>
                        {# <td>S/ {{vr.montoV}}</td> #}
                        {% set totalCr = totalCr + vr.cantidadV %}
                        {# {% set totalVr = totalVr + vr.montoV %} #}
                      </tr>
                      {% endfor %}
                    </tbody>

                    <tfoot>
                      <tr>
                        <td></td>
                        <td>{{totalCr}}</td>
                        {# <td>S/ {{totalVr}}</td> #}
                      </tr>
                    </tfoot>
                  </table>

                </div>

              </div>
            </div><!-- End Top Selling -->

        </div><!-- End Right side columns -->

      </div>
    </section>

