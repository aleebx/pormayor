  <script>
    var base_url = "{{ base_url() }}";
    $(document).on('blur', '.editVi', function(){
      // alert('enttro');
        var link = $(this).val();
        var id_producto = $(this).data('id');
         $.ajax({
         data:{
         'link' : link,
         'id_producto' : id_producto
         },
         type: "POST",
         url: base_url+'reportes/update_video', 
         dataType: "json",
         success: function(data){
           $('.rowPro'+id_producto).addClass('bg-success');
         },
         error: function(data) {
           alert('error');
         }
      });
    });    
    $(document).on('click', '.verV', function(){
      var videol = $(this).data('vid');
      $('.contVideo').attr('src',videol);
    });
  </script>

