    </div><!-- End Page Title -->

    <section class="section dashboard">
      <div class="row">
        <!-- Top Selling -->
        <div class="col-12">
          <div class="card top-selling overflow-auto">

            <div class="card-body pb-0">
              <h5 class="card-title">Despues del https://www.youtube.com/embed/ ingresa solo el codigo del video al final. Luego le das clic fuera del campo para guardar</h5>
              <span class="fuentRemix">ALEXIS BEQUIZ</span>

              <table class="table table-borderless">
                <thead>
                  <tr>
                    <th scope="col">Preview</th>
                    <th scope="col">Producto</th>
                    <th scope="col" width="60%">Link Video</th>
                    <th scope="col">Ver</th>
                  </tr>
                </thead>
                <tbody>
                  {# {% for pro in productos %}
                  <tr class="rowPro{{pro.Pro_IdProducto}}">
                    <th scope="row"><a ><img src="{{ruta_img}}{{ pro.Prf_Thumb }}" alt=""></a></th>
                    <td><span class="text-primary fw-bold">{{ pro.Pro_Nombre }}</span></td>                   
                    <td>
                       <input type="text" class="form-control editVi" data-id="{{pro.Pro_IdProducto}}" value="{{pro.Pro_Video}}">
                    </td>                   
                    <td>
                      <button type="button" class="btn btn-primary verV" data-bs-toggle="modal" data-bs-target="#basicModal" data-vid="{{pro.Pro_Video}}">
                        Video
                      </button>
                    </td>                   
                  </tr>
                  {% endfor %} #}
                </tbody>
              </table>

            </div>

          </div>
        </div><!-- End Top Selling -->
