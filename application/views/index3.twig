{% extends "layout/intranet/template_lite.twig" %}
{% block head %}
	{# <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css"> #}
	<link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/please-wait/0.0.5/please-wait.min.css"  media="screen"/>
	{# <link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/spinkit/1.2.5/spinkit.min.css"  media="screen"/> #}
	<style>
		body > .inner {display: none;}
		body.pg-loaded > .inner {display: block;}
		.fontX{font-size: 18px!important}
		.swiper-container {
	      width: 100%;
	      height: 100%;
	    }
		{% if userAgent != 'PC' %}
	  		.alturaDIV{height:289px;}
	  		.fontD2{font-size: 0.8rem!important;font-weight:1000;}
	  		.fontE{font-size: 0.8rem!important}
	  		.slider{height:170px !important;}
	  		.slides{height:200px !important;}
		{% endif %}  
	</style>
{% endblock %}
{% block content %}
	<div class="inner">
		{% if usuario.logueado %}
			<div class="hide addHomeScreen valign-wrapper">
				<button class="btn-flat white-text cerrarHomeScreen"><i class="fontA material-icons">close</i></button>
				<div class="row">
					{% if usuario.rol == 2 or usuario.rol == 3 %}
						<div class="col s6 m6 sinPadding center">
							<a href="http://{{subdominio_tienda}}.{{dominio}}/usuario/inventario/lProductos">
								<img class="b-lazy" alt="Pormayor.pe - Crear tienda" data-src="{{ruta_img}}movilOpcionTiendaB.webp">
							</a>
						</div>
						<div class="col s6 m6 sinPadding center" style="margin-bottom:20px">
							<a href="{{base_url()}}comprador/index/pedidos">
								<img class="b-lazy" alt="Pormayor.pe - Iniciar sesion" data-src="{{ruta_img}}movilOpcionCompradorB.webp">
							</a>
						</div>
						<div class="col s12 m12 center" style="margin-bottom:20px">
							<a class="cerrarSesionBtn btn pormayorUnico white-text"><i class="material-icons left">power_settings_new</i>Cerrar Sesión</a>
						</div>
					{% elseif usuario.rol == 5 %}
						<div class="col s6 m6 sinPadding center" style="margin-bottom:20px">
							<a href="{{base_url()}}gestor/gestion">
								<img class="b-lazy" alt="Pormayor.pe - Iniciar sesion" data-src="{{ruta_img}}movilOpcionCompradorB.webp">
							</a>
						</div>
						<div class="col s12 m12 center" style="margin-bottom:20px">
							<a class="cerrarSesionBtn btn pormayorUnico white-text"><i class="material-icons left">power_settings_new</i>Cerrar Sesión</a>
						</div>
					{% else %}
						<div class="col s12 m12 sinPadding center" style="margin-bottom:20px">
							<a href="{{base_url()}}comprador/index/pedidos">
								<img class="b-lazy" alt="Pormayor.pe - Perfil de usuario" data-src="{{ruta_img}}movilOpcionCompradorB.webp">
							</a>
						</div>
						<div class="col s12 m12 center">
							<a class="cerrarSesionBtn btn pormayorUnico white-text"><i class="material-icons left">power_settings_new</i>Cerrar Sesión</a>
						</div>
					{% endif %}   
				</div>
			</div>
		{% else %}
			<div class="hide addHomeScreen container valign-wrapper">
				<button class="btn-flat white-text cerrarHomeScreen"><i class="fontA material-icons">close</i></button>
				<div class="row">
					<div class="col s12 m12 center sinPadding" style="margin-bottom:20px">
						<a href="{{base_url()}}usuario/login">
							<img class="b-lazy" alt="Pormayor.pe - registrarse como comprador"  data-src="{{ruta_img}}movilOpcionCompradorA.webp">
						</a>
					</div>
				</div>
			</div>
		{% endif %}
	</div>
	<main class="container">
		<div class="row">
			<div class="col s12">
				 <div class="slider">
				    <ul class="slides">
				      <li> <a href="{{base_url()}}pagina/productos">
				    {% if userAgent == 'PC' %}
				        <img src="{{ruta_img}}banner/c_01_web.webp" style="background-color: white !important;">
				    {% else %}
				        <img src="{{ruta_img}}banner/c_01_movil.webp" style="background-color: white !important;">
				    {% endif %}
				    	</a>
				      </li>
				      <li><a href="{{base_url()}}pagina/productos">
				    {% if userAgent == 'PC' %}
				        <img src="{{ruta_img}}banner/c_02_web.webp" style="background-color: white !important;">
				    {% else %}
				        <img src="{{ruta_img}}banner/c_02_movil.webp" style="background-color: white !important;">
				    {% endif %}
						</a>
				      </li>     
				      <li>
				    {% if userAgent == 'PC' %}
				        <img src="{{ruta_img}}banner/c_03_web.webp" style="background-color: white !important;">
				    {% else %}
				        <img src="{{ruta_img}}banner/c_03_movil.webp" style="background-color: white !important;">
				    {% endif %}
				      </li>
				    </ul>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col s12 pormayorUnico center-align input-field" style="padding-top: 7px;margin-bottom: 10px;">
			 <a href="https://www.instagram.com/pormayor.pe/?hl=es-la"><img alt="Instagram PorMayor.pe" title="Instagram PorMayor.pe" src="{{ruta_img}}instaW.png" height="35"></a>&nbsp;&nbsp;
              <a href="https://www.facebook.com/pormayoroficial/"><img alt="Facebook PorMayor.pe" title="Facebook PorMayor.pe" src="{{ruta_img}}faceW.png" height="35"></a>&nbsp;&nbsp;
              <a href="mailto:contacto@pormayor.pe"><img alt="Correo PorMayor.pe" title="Correo PorMayor.pe" src="{{ruta_img}}mailW.png" height="35"></a>&nbsp;&nbsp;
              <a href="https://www.youtube.com/channel/UCte8tqCKUnni_J0VV-TDQQQ"><img alt="Youtube PorMayor.pe" title="Youtube PorMayor.pe" src="{{ruta_img}}youtubeW.png" height="35"></a>
			</div>
			<div class="col s12 center">
			{# <span style="font-size:1.5em;">Categorías</span> #}
		  	{% for cat in categorias %}
			  	<a itemprop="url" href="{{base_url()}}categoria/{{cat.url}}">
			       <div class="chip pormayor fontA">
			       		{{ cat.Cat_Nombre|upper }}
					</div>
		    	</a>
		  	{% endfor %}
			</div>
			<div class="col s12 fontE">
				<p>Últimos productos</p>
			</div>
		  	{% for pro in pro10 %}
		  	<a itemprop="url" href="{{base_url()}}productos/dp/{{pro.url}}" data-idproducto="{{pro.Pro_IdProducto}}" data-nombre="{{pro.Pro_Nombre}}">
		        <div class="col s6 m4 l3 black-text" data-cd="{{pro.Pro_PM}}">
		          <div class="card hoverable z-depth-1">
		          	<span class="badge red white-text" style="position:absolute;">Nuevo</span>
		            <div class="center" style="height:190px;">
		              <img alt="{{pro.Pro_Nombre}}-Pormayor.pe" title="{{pro.Pro_Nombre}}" class="lazy responsive-img fixImg3 redondeo" data-src="{{ruta_img}}{{pro.Prf_Thumb}}">
		            </div>
		            <div class="card-content center" style="height:100px;">
		              <p>
		              	<span class="truncate">{{pro.Pro_Nombre|upper}}</span>
		              	<small>COD: {{pro.Pro_IdProducto}}</small><br>
		              	<div class="divider"></div>
		              	{% if pro.Pro_Preventa == 1 %}
		              	<span class="fontA negrita">S/ {{pro.Pro_PrecioMinimo}}</span> x cajón<span class="new badge blue left">PRE-VENTA</span>
		              	{% else %}
		              	<span class="fontA negrita">S/ {{pro.Pro_PrecioMinimo}}</span> x cajón</label>
		              	{% endif %}
		              	<br>
		              </p>
		            </div>
		          </div>
		        </div>
	    	</a>
		  	{% endfor %}
			<div class="col s12 center"><br>
			<a href="{{base_url}}pagina/productos" class="btn btn-large" style="font-size:2em;"><b>VER TODOS LOS PRODUCTOS</b></a>
			</div>

	    </div>
	</main>	
{% endblock %}
{% block script %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/please-wait/0.0.5/please-wait.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/vanilla-lazyload@17.1.0/dist/lazyload.min.js"></script>
<script>
var base_url = "{{base_url()}}";
var loading_screen = pleaseWait({
logo: '',
backgroundColor: "#FEC00F",
loadingHtml: "<img src='{{ruta_img}}logoNegativo.svg' type='image/svg+xml' class='fixImg5' /><div class='sk-folding-cube'><div class='sk-cube1 sk-cube'></div><div class='sk-cube2 sk-cube'></div><div class='sk-cube4 sk-cube'></div><div class='sk-cube3 sk-cube'></div></div>"
});
</script>
<script src="{{base_url('public/')}}js/index.min.js?v=5"></script>
{% endblock %}