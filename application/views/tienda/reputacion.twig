{% extends "layout/intranet/template_lite.twig" %}
{% block head %}
  <link type="text/css" rel="stylesheet" href="{{base_url('public/intranet/css/reputacion.css')}}"  media="screen,projection"/>
  <style type="text/css">
  .anime1 {
  fill:none;
  stroke-width:3;
  stroke:#21478F;
}
</style>
}
{% endblock %}
{% block content %}

<main class="container fixContainer">
  <br class="hide-on-large-only">
  <br class="hide-on-large-only">
  
  <div class="card">
    <div class="card-content sinPadding">
      <div class="row cardContentFix">
        <div class="row centrarForzado positionRelative center">
          <div id="animationScore" class="center">
            <div id="inputAnimation" class="positionAbsolute"> <input class="text-output" value="" readonly=""> </div>
            <div class="circleScore centrarForzado positionAbsolute"></div>
            
            <svg height="165"viewBox="0 0 207 207">
              <g class="lineas">
                <path class="anime1" d="M103.5,6A97.5,97.5,0,1,1,6,103.5,97.61,97.61,0,0,1,103.5,6m0-6A103.5,103.5,0,1,0,207,103.5,103.5,103.5,0,0,0,103.5,0Z"/>
              </g>
            </svg>
          </div>
          <span style="font-size:1.8rem"><b>VENTAS CONCRETADAS</b></span><br>
          <span class="fontA enfasisB">Con <b>{{calificacion|length}}</b> calificaciones</span>
        </div>   
        <br><br>  
        <div class="row center centrarForzado">
          <div class="col s12 sinPadding">
            <ul class="tabs">
              <li class="tab col s3 m3 l4"><a href="#tabCalifB" data-calif="{{range.neutral|round}}"><img class="positionRelative" src="{{ruta_img}}califB.png"  height="40"></a></li>
              <li class="tab col s3 m3 l4"><a href="#tabCalifA" data-calif="{{range.positivo|round}}" class="active"><img class="positionRelative" src="{{ruta_img}}califA.png"  height="40"></a></li>
              <li class="tab col s3 m3 l4"><a href="#tabCalifC" data-calif="{{range.negativo|round}}"><img class="positionRelative" src="{{ruta_img}}califC.png"  height="40"></a></li>
            </ul>
          </div>
          <div id="tabCalifB" class="col s12 orange lighten-2">
            <br>
            <input class="scoreText" value="0" readonly="">
            <br>
            <span class="enfasisB">NO OPINO SOBRE ELLA</span>
            <br><br>
          </div>
          <div id="tabCalifA" class="col s12 green lighten-2">
            <br>
            <input class="scoreText" value="0" readonly="">
            <br>
            <span class="enfasisB">LA RECOMIENDA</span>
            <br><br>
          </div>
          <div id="tabCalifC" class="col s12 red lighten-2">
            <br>
            <input class="scoreText" value="0" readonly="">
            <br>
            <span class="enfasisB">NO LA RECOMIENDA</span>
            <br><br>
          </div>
        </div>
        <br>
      </div>
    </div>
  </div>
    <div class="card">
      <div class="card-content sinPadding">
        <div class="row sinBordeBottom cardContentFix">
          <div class="col s12 m12 l12 center">
            <span class="card-title">Calificaciones</span>
            <div class="divider"></div>
          </div>
        </div>
      {% for cal in calificacion %}
      <br>
        <div class="row cardContentFix sinPadding">          
          <div class="col s4 m4 l4 center">
            {% if cal.Cal_Tienda == '1t' %}
              <img src="{{ruta_img}}califA.png" height="40">
            {% elseif cal.Cal_Tienda == '2t'%}
              <img src="{{ruta_img}}califB.png" height="40">
            {% else %}
              <img src="{{ruta_img}}califC.png" height="40">
            {% endif %}
          </div>
          <div class="col s8 m8 l8"><i>{{cal.Cal_Comentario}}</i> </div>
        </div>
        <div class="divider"></div>
      {% endfor %}
      </div>
    </div>
</main>

{% endblock %}

{% block script %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.2.0/anime.min.js"></script>
   <script>
    var nroVentas = {{ventas}};
    </script>
  <script src="{{base_url('public/')}}js/tienda/reputacion.js?v={{now|date('i:s')}}"></script>
{% endblock %}