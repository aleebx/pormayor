    <table id="listaP">
      <thead>
        <tr>
          <th></th>
          <th>Nombre</th>
          <th>Cantidad</th>
          <th>Precio</th>
        </tr>
      </thead>
      <tbody>
        {% set i = 1 %}
      {% for pro in productos %}
        <tr>
          <td>
            <img src="{{ruta_img}}{{pro.Prf_Img}}" height="50"></td>
          <td class="fontA">{{pro.Pro_Nombre}}</td>
          <td class="fontC">{{pro.Prp_Desde}} - {% if pro.Prp_A == 9999 %} + {% else %}{{pro.Prp_A}}{% endif %}</td>
          <td class="fontC">{{pro.Prp_Precios}}</td>
        </tr>
        {% set i = i + 1 %}
      {% endfor %}
      </tbody>
    </table>
  </main>
{% endblock %}
