				<a class="enfasisA comoBoton"  href="http://{{tie.Tie_Subdominio}}.{{dominio}}">
			    	<li class="collection-item avatar anchoTotal" style="border-radius:0px;border: 0.5px solid rgba(0,0,0,0.1)">
			    		<div >
					    	{% if tie.Tie_Logo %}
		                    	<img src="{{ruta_img}}{{tie.Tie_Logo}}" alt="" class="circle" style="top:20px">
