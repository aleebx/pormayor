{% extends "layout/correo.twig" %}

{% block content %}
	<td bgcolor="#FFFFFC" style="padding: 40px 30px 40px 30px;">
  		<table border="0" cellpadding="0" cellspacing="0" width="100%">
    		<tr>
    			<td style="color: #383838; font-family: Arial, sans-serif; font-size: 24px;">
					Hola <b>{{nombre_usuario}}</b>
				</td>
    		</tr>
    		<tr>
      			<td style="padding: 10px 0 30px 0; color: #383838; font-family: Arial, sans-serif; font-size: 15px; line-height: 20px;">
      				<table border="0" cellpadding="0" cellspacing="0" width="100%">
		               	<tr>
		                	<td style="padding: 10px 0px; color: #383838; font-family: Arial, sans-serif; font-size: 15px; line-height: 20px;">
		                    	Acabas de solicitar una cotizacion de los siguientes articulos 
		                  	</td>
		                </tr>
		                <tr>
		                	<td>
		                    	<table style="table-layout: fixed" border="0" cellpadding="0" cellspacing="0" width="550px">
		                      		<thead style="background-color: #FEC00F;">
		                        		<tr>
		                          			<th style="background-color:  #FFFFFF;" width="65"></th>
		                          			<th style="padding: 8px 10px; font-size: 12px;text-align:center;font-family: Arial, sans-serif;" width="200" valign="middle">PRODUCTO</th>
		                          			<th style="padding: 8px 10px; font-size: 12px;text-align:center;font-family: Arial, sans-serif;" width="30" valign="middle">CANT.</th>
		                        		</tr>
		                      		</thead>
		                      		<tbody>
				                      	{% for items in dataCarrito %}
				                      		<tr>
							                  	<td style="border-bottom: 1px solid #CBCBCB; padding: 0px;" valign="top">
							                      <div style="margin:0 auto; margin:5px; width:100px; height: 100px;  border-radius: 10px;"><img style="width: 100%; height: 100px; object-fit: contain;" src="http://pormayor.pe/img/{{items.img}}"></div>
							              		</td>
						                    	<td style="vertical-align: middle;border-bottom: 1px solid #CBCBCB; padding: 0px; font-size: 15px;text-align:center;font-family: Arial, sans-serif;  color:rgba(0,0,0,0.7);" valign="top">
						                        	{{items.name}}
						                        </td>
						                      	<td style="vertical-align: middle;border-bottom: 1px solid #CBCBCB; padding: 0px; font-size: 15px;text-align:center;font-family: Arial, sans-serif;  color:rgba(0,0,0,0.7);" valign="top">
						                      		{{items.qty}}<br>
						                      		unid(s)
						                      	</td>
							              	</tr>
				                      	{% endfor %}
				                    </tbody>
		                		</table>
              				</td>
           				</tr>
           				<tr>
		                	<td style="padding: 20px 0px; color: #383838; font-family: Arial, sans-serif; font-size: 15px; line-height: 20px;">
		                    	Recibirás un correo una vez respondan tu cotización.
		                    	<br><br>
		                    	Gracias por utilizar <a href="https://pormayor.pe" style="text-decoration:none;color: #21478F;"><b>pormayor.pe</b></a><br/>
		                  	</td>
		                </tr>
          			</table>
        		</td>
    		</tr>
    	</table>
	</td>
{% endblock %}