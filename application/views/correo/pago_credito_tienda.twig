{% extends "layout/correo.twig" %}

{% block content %}
	<td bgcolor="#FFFFFC" style="padding: 40px 30px 40px 30px;">
  		<table border="0" cellpadding="0" cellspacing="0" width="100%">
    		<tr>
    			<td style="color: #383838; font-family: Arial, sans-serif; font-size: 24px;">
					<b>¡Felicidades {{nombre_usuario}}</b>!
				</td>
    		</tr>
    		<tr>
      			<td style="padding: 0; color: #383838; font-family: Arial, sans-serif; font-size: 15px; line-height: 20px;">
      				<table border="0" cellpadding="0" cellspacing="0" width="100%">
		               	<tr>
		                	<td style="padding: 20px 0 30px 0; color: #383838; font-family: Arial, sans-serif; font-size: 15px; line-height: 20px;">
		                		{% for items in dataCarrito %}
		                      		{% if items.idtienda == Tie_IdTienda %}{% set total = total + items.price %}{% endif %}
		                      	{% endfor %}
		                    	El usuario <b>{{nombre_cliente}}</b>, numero de teléfono <b>{{telf}}</b>
		                  	</td>
		                </tr>
		                <tr>
				        <td style="padding: 20px 0 0 0; color: #383838; font-family: Arial, sans-serif; font-size: 15px; line-height: 20px;">
				          <table border="0" cellpadding="0" cellspacing="0" width="100%">
				            <tr>
				              <td style="padding: 0 0 20px 0; color: #383838; font-family: Arial, sans-serif; font-size: 15px; line-height: 20px;">
				                El método de pago elegido por el comprador fue <strong>TARJETA DE CRÉDITO/DÉBITO</strong>.
				              </td>
				            </tr>
				            <tr>
				              <td style="padding: 0 0 20px 0; color: #383838; font-family: Arial, sans-serif; font-size: 15px; line-height: 20px;">               
				                <ul>
				                  <li>Empaqueta tu producto adecuadamente.</li>
				                  <li>Imprime y pega tu guÍa de envio en el paquete.</li>
				                  <li>Entregar el paquete el día de mañana al courier que vendrá a tu negocio (Antes del medio día)</li>
				                </ul>
				                Los martes de cada semana serán depositado el dinero de tus ventas de la semana anterior.</strong>
				              </td>
				            </tr>
				          </table>
				        </td>
				      </tr>
		                <tr>
              				<td style="padding: 10px; font-size: 15px;text-align:center;font-family: Arial, sans-serif;  color:#383838;border-bottom: 1px solid rgba(0,0,0,0.2)" width="" valign="top"><b>RESUMEN DE TU VENTA</b>
              				</td>
              			</tr>
              			<tr>
              				<td><br></td>
              			</tr>
		                <tr>
		                	<td>
		                    	<table style="table-layout: fixed" border="0" cellpadding="0" cellspacing="0" width="550px">
		                      		<thead style="background-color: #FEC00F;">
		                        		<tr>
		                          			<th style="background-color:  #FFFFFF;" width="80"></th>
		                          			<th style="padding: 8px 10px; font-size: 12px;text-align:center;font-family: Arial, sans-serif;" width="150" valign="middle">PRODUCTO</th>
		                          			<th style="padding: 8px 10px; font-size: 12px;text-align:center;font-family: Arial, sans-serif;" width="30" valign="middle">CANT.</th>
		                          			<th style="padding: 8px 10px; font-size: 12px;text-align:center;font-family: Arial, sans-serif;" width="60" valign="middle">PRECIO UNITARIO</th>
		                          			<th style="padding: 8px 10px; font-size: 12px;text-align:center;font-family: Arial, sans-serif;" width="60" valign="middle">IMPORTE</th>
		                        		</tr>
		                      		</thead>
		                      		<tbody>
				                     {% set total = 0 %}
				                      	{% for items in dataCarrito %}
				                      		{% if items.idtienda == Tie_IdTienda %}
				                      			{% set preUni =  items.price / items.qty %}
					                      		<tr>
								                  	<td style="border-bottom: 1px solid #CBCBCB; padding: 0px;" valign="top">
								                      <div style="margin:0 auto; margin:5px; width:100px; height: 100px;  border-radius: 10px;"><img style="width: 100%; height: 100px; object-fit: contain;" src="http://pormayor.pe/img/{{items.img}}"></div>
								              		</td>
							                    	<td style="vertical-align: middle;border-bottom: 1px solid #CBCBCB; padding: 0px; font-size: 15px;text-align:center;font-family: Arial, sans-serif;  color:rgba(0,0,0,0.7);" valign="top">
							                      	  {{items.name}}
							                        </td>
							                      	<td style="vertical-align: middle;border-bottom: 1px solid #CBCBCB; padding: 0px; font-size: 15px;text-align:center;font-family: Arial, sans-serif;  color:rgba(0,0,0,0.7);" valign="top">
							                      		{{items.qty}}<br>unid(s)
							                      	</td>
							              			<td style="vertical-align: middle;border-bottom: 1px solid #CBCBCB; padding: 0px; font-size: 15px;text-align:center;font-family: Arial, sans-serif;  color:rgba(0,0,0,0.7);" valign="top">
							              				{{preUni}}
							              			</td>
							              			<td style="vertical-align: middle;border-bottom: 1px solid #CBCBCB; padding: 0px; font-size: 15px;text-align:center;font-family: Arial, sans-serif;  color:rgba(0,0,0,0.7);" valign="top">
							              				{{items.price}}
							              			</td>
								              	</tr>
							              	{% set total = total + items.price %}
				                      		{% endif %}							              	
				                      	{% endfor %}
				                      	<tr>
				                      		<td colspan="3" style="vertical-align: middle;border-bottom: 1px solid #CBCBCB; padding: 10px; font-size: 15px;text-align:center;font-family: Arial, sans-serif;  color:rgba(0,0,0,0.7);" valign="top">
						              			TOTAL A PAGAR
						              		</td>
						              		<td colspan="2" style="vertical-align: middle;border-bottom: 1px solid #CBCBCB; padding: 0px; font-size: 20px;text-align:center;font-family: Arial, sans-serif;  color:rgba(0,0,0,0.7);" valign="top">
						              			<b>S/. {{total|number_format(2, '.', ' ')}}</b>
						              		</td>
				                      	</tr>
				                    </tbody>
		                		</table>
              				</td>
           				</tr>
           				<tr>
		                	<td style="padding: 20px 0 30px 0; color: #383838; font-family: Arial, sans-serif; font-size: 15px; line-height: 20px;">
		                    	<b >En las próximas horas te contactaremos para coordinar el envio de los productos.</b>
		                  	</td>
		                </tr>
          			</table>
        		</td>
    		</tr>
    	</table>
	</td>
{% endblock %}