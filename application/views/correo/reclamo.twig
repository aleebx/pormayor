{% extends "layout/correo.twig" %}

{% block content %}
<tr style="border-top: #f6b21d 5px solid;">
	<td bgcolor="#3b3b3d" align="center" style="padding: 20px 0px 20px 0px;font-size: 1.5rem; font-family: Arial, sans-serif;color:white">
		Hoja de reclamo #00{{id}}
	</td>
</tr>
<tr>
		<td style="padding: 10px 5px 5px 10px; color: #383838; font-family: Arial, sans-serif; font-size: 14px; line-height: 20px;">
			Detalle del reclamo
		<br />
	</td>
</tr>
<tr style="border-bottom: #f6b21d 5px solid;">
		<td  style="padding: 10px 5px 5px 10px; color: #383838; font-family: Arial, sans-serif; font-size: 18px; line-height: 20px;">
		<ul>
			<li>Nombre Completo: {{nombre}}</li>
			<li>Número de documento de identidad: {{di}}</li>
			<li>Dirección: {{dir}}</li>
			<li>Correo: {{correo}}</li>
			<li>Teléfono: {{tlf}}</li>
			<li>¿Qué quieres registrar?: {{qqr}}</li>
			<li>¿Por qué tema nos escribes?: {{qte}}</li>
			<li>Monto a reclamar: {{monto}}</li>
			<li>¿Cuál fue el problema?: {{problema}}</li>
			<li>¿Quñe solución esperas? {{solucion}}</li>
		</ul>
		</td>
</tr>
{% endblock %}

