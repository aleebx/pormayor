{% extends "layout/intranet/template_ven.twig" %}
{% block head %}
  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.css">
{% endblock %}
{% block content %}
  <main class="">
    <div class="card">
      <div class="card-content">
        <h4>Buscador cliente</h4>
        <div class="row">
          <div class="input-field col s6">
            <input id="DNIcliente" placeholder="" type="number" class="validate" value="">
            <label for="DNIcliente">D.N.I</label>
          </div>
          <div class="input-field col s6">
            <input id="tlf" placeholder="" type="number" class="validate" min="1" value="">
            <label for="tlf">Teléfono Celular</label>
          </div>
        </div>
        <div class="row">
          <div class="col s12 preload"></div>
        </div>
        <table id="listado">
          <thead>
            <tr>
                <th>Fecha Registro</th>
                <th>Datos cliente</th>
                <th>Ubicación</th>
                <th>Teléfono</th>
                <th>Ventas</th>
                <th>Estado</th>
                <th>Catera</th>
                <th></th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
  </main>
  <div id="modalGes" class="modal" style="z-index:9999 !important;width: 50%!important;">
      <div class="modal-content" id="loadEdit"></div>
  </div>
{% endblock %}

{% block script %}
  <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.js"></script>
  <script src="{{base_url('public/')}}js/vendedor/buscador.js?v=12" type="text/javascript"></script>
{% endblock %}